@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="border background-white">
    <div class="row d-flex justify-content-between">
        <div class="col-6">
            <h4 class="text-info">
                Menu Item List
            </h4>
        </div>
        <div class="col-6 text-right d-flex justify-content-end">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Price)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CategoryId)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.SubCategoryId)</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="d-flex justify-content-between">
                            <td>@Html.DisplayFor(m => item.Name) </td>
                            <td>@Html.DisplayFor(m => item.Price) </td>
                            <td>@Html.DisplayFor(m => item.Category.Name) </td>
                            <td>@Html.DisplayFor(m => item.SubCategory.Name) </td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                            <td><a asp-action="Delete" asp-route-id="@item.Id">Delete for sure</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No Data available</p>
        }

    </div>
</div>