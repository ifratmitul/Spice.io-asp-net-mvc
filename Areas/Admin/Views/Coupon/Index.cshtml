@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="border background-white">
    <div class="row d-flex justify-content-between">
        <div class="col-6">
            <h4 class="text-info">
                Coupon List
            </h4>
        </div>
        <div class="col-6 text-right d-flex justify-content-end">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Discount)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.MiniAmount)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IsActive)</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="d-flex justify-content-between">
                            <td class="d-flex align-items-center">@Html.DisplayFor(m => item.Name) </td>
                            <td class="d-flex align-items-center">@Html.DisplayFor(m => item.Discount) </td>
                            <td class="d-flex align-items-center">@Html.DisplayFor(m => item.MiniAmount) </td>
                            <td class="d-flex align-items-center">@Html.DisplayFor(m => item.IsActive) </td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No coupon available</p>
        }

    </div>
</div>